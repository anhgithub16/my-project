@model Tour.Entites.Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/CSS/Login.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Đăng ký</h1>
                <div class="account-wall">
                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "LastName", @class = "form-control" })
                        <br />

                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "FirstName", @class = "form-control" })
                        <br />

                        @Html.TextBoxFor(m => m.DateOfBirth, new { placeholder = "Date of Birth", @class = "form-control" })
                        <br />

                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        
                        <br />
                        <div>
                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "UserName", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <br />

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Sign up
                        </button>

                        <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                    }

                </div>

            </div>
        </div>
    </div>
   
   
</body>
</html>
