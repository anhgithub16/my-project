@model Tour.Entites.Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/CSS/Login.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Đăng nhập</h1>
                <div class="account-wall">
                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @*<input type="text" class="form-control" placeholder="UserName" required autofocus>*@

                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "UserName", @class = "form-control" })
                        <br />

                        @*<input type="password" class="form-control" placeholder="Password" required>*@
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                        <br />

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Sign in
                        </button>

                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me">
                            Remember me
                        </label>
                        <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                    }

                </div>
                <!--REGISTER-->
                <a href="@Url.Action("Register","Account")" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Mes != null)
    {
        <script type="text/javascript" >
            $(function () {
                alert("@ViewBag.Mes")
            });
        </script>
    }
</body>
</html>
